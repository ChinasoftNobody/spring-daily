<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lgh.spring.boot.mapper.UserMapper">
    <select id="first" resultType="com.lgh.spring.boot.model.MUser">
        SELECT * FROM t_user limit 1;
    </select>

    <select id="selectByNameAndPassword" resultType="com.lgh.spring.boot.model.MUser">
        SELECT * FROM t_user WHERE `name` = #{name} AND `password` = #{password};
    </select>
</mapper>
